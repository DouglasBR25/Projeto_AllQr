<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_auau"
    android:orientation="horizontal"
    tools:context=".AllQrCode">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="400dp"
            android:layout_height="310dp"
            android:src="@drawable/hamburgue" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Zinger Burger"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="R$ 14.99"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMenos"
                android:layout_width="40dp"


                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#FF2C00"
                android:gravity="center"

                android:text="-"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnQuantidade"
                android:layout_width="41dp"


                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:gravity="center"

                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnMais"
                android:layout_width="43dp"


                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#3F7D20"
                android:gravity="center"
                android:text="+"

                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="The Zinger is a batter-coated, fried patty in a bun, with a slice of lettuce and mayo and cheese"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAplicarCupom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginRight="@+id/btnAplicarCupom"
                android:src="@drawable/cupom" />

            <Button
                android:id="@+id/btnAplicarCupom"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:backgroundTint="#868686"
                android:gravity="center"
                android:text="Aplicar cupom"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAdicionarItens"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginRight="@+id/btnAdicionarItens"
                android:src="@drawable/adicionar" />

            <Button
                android:id="@+id/btnAdicionarItens"
                android:layout_width="250dp"
                android:layout_height="40dp"

                android:layout_margin="5dp"
                android:layout_marginRight="@+id/btnAplicarCupom"
                android:backgroundTint="#868686"
                android:gravity="center"
                android:text="Adicionar Itens"


                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCombos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginRight="@+id/btnCombos"
                android:src="@drawable/comida" />

            <Button
                android:id="@+id/btnCombos"
                android:layout_width="250dp"


                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:backgroundTint="#868686"
                android:gravity="center"

                android:text="Combos"

                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnItem"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:backgroundTint="#FF2C00"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1 item R$ 14,99"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
